<h1>새 테마 추가</h1>


<div>
  <% @themes.where.not(name: ["お部屋写真", "その他"]).each do |theme| %>
    <p>
      <%= theme.name %>
    </p>
    <div>
      <%= link_to "Edit", edit_admin_theme_path(theme) %>
    </div>
    <div>
      <%= link_to 'Destroy', admin_theme_path(theme), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
    </div>
  <% end %>
</div>

<div>
  <%= form_with model: [:admin, @theme], local: true do |f| %>
    <div>
      <%= f.label :name, "테마 이름" %><br>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.submit "추가", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>