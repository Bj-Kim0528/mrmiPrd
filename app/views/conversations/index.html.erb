    style="
      flex: 1 1 auto;
      margin: 0;
      padding: 0;
      list-style: none;
      overflow-y: auto;
    "
  >
    <% current_user.following.each do |user| %>
      <li
        style="
          display: flex;
          justify-content: space-between;
          align-items: center;
          padding: 12px 16px;
        "
      >
        <!-- 프로필 + 닉네임/이름 -->
