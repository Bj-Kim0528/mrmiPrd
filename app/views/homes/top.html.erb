<!-- app/views/homes/top.html.erb -->
<div class="container my-5">

  <!-- 인기 카드콜렉션 슬라이드쇼 섹션 (더미 데이터 사용) -->
  <div id="popularCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-inner">
      <!-- 슬라이드 1 -->
      <div class="carousel-item active">
        <%= link_to "#" do %>
          <img src="https://placekitten.com/800/450" class="d-block w-100" alt="인기 카드콜렉션 예시">
        <% end %>
        <div class="carousel-caption d-none d-md-block">
          <h5>お部屋写真 - User1</h5>
          <p>좋아요: 10 / 북마크: 5 / 조회수: 100</p>
        </div>
      </div>
      <!-- 슬라이드 2 -->
      <div class="carousel-item">
        <%= link_to "#" do %>
          <img src="https://placekitten.com/801/450" class="d-block w-100" alt="인기 카드콜렉션 예시">
        <% end %>
        <div class="carousel-caption d-none d-md-block">
          <h5>収納TIP - User2</h5>
          <p>좋아요: 8 / 북마크: 3 / 조회수: 80</p>
        </div>
      </div>
      <!-- 추가 슬라이드(나중에 @popular_card_collections 로 대체) -->
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#popularCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">이전</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#popularCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">다음</span>
    </button>
  </div>

  <!-- 추천 카드콜렉션 섹션 (격자형, 더미 데이터 사용) -->
  <div class="mb-5">
    <h2>추천 카드콜렉션</h2>
    <div class="row">
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
          <%= link_to "#" do %>
            <img src="https://placekitten.com/400/300" class="card-img-top" alt="추천 카드콜렉션 예시">
          <% end %>
          <div class="card-body">
            <h5 class="card-title">ペット</h5>
            <p class="card-text">작성자: User3</p>
            <p class="card-text">좋아요: 7 / 북마크: 2 / 조회수: 50</p>
          </div>
        </div>
      </div>
      <!-- 추가 카드들을 그리드로 배치 (나중에 @recommended_card_collections 로 대체) -->
    </div>
  </div>

  <!-- 해시태그 채널 섹션 (더미 데이터 사용) -->
  <div class="mb-5">
    <h2>해시태그 채널</h2>
    <div class="row">
      <div class="col-12 col-md-4 col-lg-3 mb-4">
        <div class="card h-100">
          <%= link_to "#" do %>
            <div class="card-body text-center">
              <h3>#SampleTag</h3>
              <p>게시물 수: 15</p>
            </div>
          <% end %>
        </div>
      </div>
      <!-- 추가 해시태그 카드 (나중에 @hashtags 로 대체) -->
    </div>
  </div>

  <!-- 임시 예시: 기타 섹션 (필요 시 추가) -->
  <div class="mb-5">
    <h2>기타 섹션</h2>
    <p>여기에 추가 콘텐츠(예: 공지사항, 이벤트 등)를 넣을 수 있습니다.</p>
  </div>
</div>
