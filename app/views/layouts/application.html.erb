<!DOCTYPE html>
<html>
  <head>
    <title>MrmiPrd</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


  
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>
  <body>
    <nav class="navbar">
      <%= link_to "Top", root_path, class: "navbar-brand" %>
      <div>
      <% if user_signed_in? %>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-outline-info" %>
        <%= link_to "マイページ", root_path, class: "btn btn-info"%>
      <% else %>
        <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-info" %>
        <%= link_to "会員登録", new_user_registration_path, class: "btn btn-info" %>
      <% end %>
      </div>
    </nav>
    <div class="container-fluid">
      <div class="card">
        <div class="card-body"></div>
          <%= yield %>
      </div>
    </div>
  </body>
</html>


