<%= form_for(@userinfo, url: update_password_user_path(@userinfo)) do |f| %>
  <div style="max-width: 343px; margin: 30px auto; padding: 0 30px; box-sizing: border-box;">

    <!-- 현재 비밀번호 -->
    <div style="margin-bottom: 16px;">
      <label for="userinfo_current_password" style="display: block; margin-bottom: 6px; font-size: 14px; font-weight: 600;">現在のパスワード</label>
      <%= f.password_field :current_password,
                           autocomplete: "current-password",
                           style: "width: 100%; height: 44px; padding: 0 10px; font-size: 14px; border: 1px solid #ccc; border-radius: 4px;" %>
    </div>

    <!-- 새 비밀번호 -->
    <div style="margin-bottom: 16px;">
      <label for="userinfo_password" style="display: block; margin-bottom: 6px; font-size: 14px; font-weight: 600;">新しいパスワード</label>
      <%= f.password_field :password,
                           autocomplete: "new-password",
                           style: "width: 100%; height: 44px; padding: 0 10px; font-size: 14px; border: 1px solid #ccc; border-radius: 4px;" %>
    </div>

    <!-- 새 비밀번호 확인 -->
    <div style="margin-bottom: 16px;">
      <label for="userinfo_password_confirmation" style="display: block; margin-bottom: 6px; font-size: 14px; font-weight: 600;">新しいパスワードの確認</label>
      <%= f.password_field :password_confirmation,
                           autocomplete: "new-password",
                           style: "width: 100%; height: 44px; padding: 0 10px; font-size: 14px; border: 1px solid #ccc; border-radius: 4px;" %>
    </div>

    <!-- 비밀번호 변경 버튼 -->
    <div style="margin-bottom: 16px;">
      <%= f.submit "パスワードを変更",
            style: "
              width: 100%;
              height: 44px;
              border: none;
              border-radius: 4px;
              background-color: #0AA5FF;
              color: white;
              font-size: 16px;
              font-weight: 600;
              cursor: pointer;
            " %>
    </div>

    <!-- 추가 안내 문구 (선택) -->
    <p style="font-size: 12px; color: #666; margin-top: 10px;">
      パスワードを変更した後は、新しいパスワードで再ログインしてください。
    </p>
  </div>
<% end %>
