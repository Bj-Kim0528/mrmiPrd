<h2>비밀번호 변경</h2>

<%= form_for(@userinfo, url: update_password_user_path(@userinfo)) do |f| %>
  <div>
    <%= f.label :current_password, "현재 비밀번호" %><br>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>
  <div>
    <%= f.label :password, "새 비밀번호" %><br>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <div>
    <%= f.label :password_confirmation, "새 비밀번호 확인" %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div>
    <%= f.submit "비밀번호 변경", class: "btn btn-primary" %>
  </div>
<% end %>
