<% if resource.errors.any? %>
  <div class="alert alert-danger" role="alert" style="padding: 16px; margin-bottom: 24px; border-radius: 4px;">
    <h4 class="alert-heading" style="font-size: 16px; font-weight: 700; margin-bottom: 8px;">
      入力内容に問題があります
    </h4>
    <ul style="margin:0; padding-left: 20px;">
      <% resource.errors.full_messages.each do |message| %>
        <li style="font-size: 14px; line-height: 1.6; margin-bottom: 4px;"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div style="width: 360px; margin: 0 auto; padding: 60px 0; text-align: center; box-sizing: border-box;">
  <!-- 페이지 타이틀 -->
  <h2 style="font-size: 20px; font-weight: 700; margin-bottom: 16px;">
    パスワード再設定
  </h2>
  <!-- 안내 문구 -->
  <p style="font-size: 14px; color: #666; margin-bottom: 24px;">
    登録したメールアドレスを入力してください。
  </p>

  <!-- Devise의 비밀번호 재설정 폼 -->
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <!-- 에러 메시지 (공통) -->


    <!-- 이메일 입력 필드 (이메일 아이디) -->
    <div style="max-width: 343px; margin: 0 auto; padding: 0 30px; text-align: left; box-sizing: border-box;">
      <div style="display: flex; gap: 4px; margin-bottom: 16px;">
        <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              placeholder: "メールアドレス",
              style: "
                flex: 1;
                height: 44px;
                border: 1px solid #ccc;
                border-radius: 4px;
                padding: 0 10px;
                font-size: 14px;
                box-sizing: border-box;
              " %>
      </div>

      <!-- "이메일로 인증코드 받기" 버튼 -->
      <div class="actions" style="margin-bottom: 24px;">
        <%= f.submit "メールで認証コードを受け取る", style: "
          display: block;
          width: 100%;
          height: 44px;
          border: none;
          border-radius: 4px;
          background-color: #0AA5FF;
          color: #fff;
          font-size: 16px;
          font-weight: 600;
          cursor: pointer;
        " %>
      </div>
    </div>
  <% end %>

  <!-- 추가 안내 문구 및 고객센터 정보 -->
  <p style="font-size: 14px; color: #666; margin-bottom: 8px;">
    会員登録時に入力した情報がわからない場合は？
  </p>
  <div>
    <p style="
      font-size: 14px;
      color: #007bff;
      text-decoration: none;
      font-weight: 600;
      margin: 0;
    ">
      カスタマーセンターにお問い合わせください<br>
      (bjking102409@gmail.com)
    </p>
  </div>
</div>
