<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :email_local, required: true, placeholder: "아이디 부분" %> @
    <%= f.text_field :email_domain, required: true, placeholder: "example.com" %>
  </div>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, value: resource.nickname %>
  </div>


  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.check_box :terms_of_service %>
    <%= f.label :terms_of_service, "이용 약관에 동의합니다" %>
  </div>

  <div class="field">
    <%= f.check_box :privacy_policy %>
    <%= f.label :privacy_policy, "개인정보 처리방침에 동의합니다" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
